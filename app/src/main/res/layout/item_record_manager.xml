<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="16dp"
    app:background_normal="@color/white">

    <com.ruffian.library.widget.RImageView
        android:id="@+id/riv_record"
        android:layout_width="72dp"
        android:layout_height="54dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="12dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="南京食品经营企业一"
        android:textColor="@color/color_4d4d4d"
        android:textSize="19sp"
        android:layout_marginTop="14dp"
        android:layout_toStartOf="@+id/iv_status"
        android:paddingEnd="10dp"
        android:gravity="start"
        android:layout_toEndOf="@+id/riv_record"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="南京市秦淮区健康路888号"
        android:textSize="14sp"
        android:layout_toStartOf="@+id/iv_status"
        android:layout_alignParentBottom="true"
        android:textColor="@color/color_999999"
        android:layout_marginBottom="19dp"
        android:gravity="start"
        android:paddingEnd="10dp"
        android:layout_toEndOf="@+id/riv_record"/>

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_record_status_change"
        android:layout_marginEnd="15dp"/>

</com.ruffian.library.widget.RRelativeLayout>