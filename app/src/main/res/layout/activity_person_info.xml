<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.PersonInfoActivity"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="70dp">
        <RelativeLayout
            android:id="@+id/rl_head_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="414:272"
            android:background="@drawable/ic_person_head">

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="26dp"
                    android:src="@drawable/ic_left_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:text="个人中心"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_top_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="127dp"
            app:layout_constraintDimensionRatio="414:172"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_photo_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江苏质监，您好！"
                android:textColor="@color/color_666666"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="68sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江苏省市场监督局食品经营许可"
                android:textColor="@color/color_999999"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="53dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="112dp"
            android:layout_height="112dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="78dp"
            android:background="@drawable/ic_photo_circle">
            <com.ruffian.library.widget.RImageView
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:layout_centerInParent="true"
                app:is_circle="true"
                app:icon_src_normal="@color/color_9f9f9f"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_change_password"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:layout_constraintTop_toBottomOf="@+id/rl_top_info"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="30dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_change_password"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textColor="@color/color_666666"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginStart="34dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_centerVertical="true"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_arrow_right_gray"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@color/color_c2c2c2"/>
        </RelativeLayout>

        <com.ruffian.library.widget.RImageView
            android:layout_width="112dp"
            android:layout_height="112dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="78dp"
            android:src="@drawable/ic_photo_circle"/>

        <RelativeLayout
            android:id="@+id/rl_system_setting"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:layout_constraintTop_toBottomOf="@+id/rl_change_password"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="30dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_system_setting"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统设置"
                android:textColor="@color/color_666666"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginStart="34dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_centerVertical="true"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_arrow_right_gray"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@color/color_c2c2c2"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_use_help"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:layout_constraintTop_toBottomOf="@+id/rl_system_setting"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="30dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_use_help"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用帮助"
                android:textColor="@color/color_666666"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginStart="34dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_centerVertical="true"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_arrow_right_gray"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@color/color_c2c2c2"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_version_info"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:layout_constraintTop_toBottomOf="@+id/rl_use_help"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="30dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_version_info"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本信息"
                android:textColor="@color/color_666666"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginStart="34dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_centerVertical="true"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_arrow_right_gray"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="退出登录"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="90dp"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp"
            android:background="@drawable/ic_bg_green_dark"
            app:layout_constraintTop_toBottomOf="@+id/rl_version_info"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
