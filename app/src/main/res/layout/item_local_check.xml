<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="17dp"
    app:background_normal="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_check"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp">

        <com.ruffian.library.widget.RImageView
            android:id="@+id/riv_check"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="179:117"
            android:src="@drawable/ic_food_default"
            app:corner_radius="5dp"
            android:scaleType="centerCrop"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="南京食品经营企业一"
        android:textColor="@color/color_4d4d4d"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        android:layout_toStartOf="@+id/rtv_status"
        android:paddingEnd="10dp"
        android:gravity="start"
        android:layout_toEndOf="@+id/cl_check"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2020/01/21"
        android:layout_below="@+id/tv_title"
        android:textColor="@color/color_999999"
        android:textSize="12sp"
        android:layout_marginTop="1dp"
        android:layout_toStartOf="@+id/rtv_status"
        android:paddingEnd="10dp"
        android:gravity="start"
        android:layout_toEndOf="@+id/cl_check"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="南京市秦淮区健康路888号"
        android:textSize="14sp"
        android:layout_toStartOf="@+id/rtv_status"
        android:layout_below="@id/tv_time"
        android:textColor="@color/color_999999"
        android:layout_marginTop="2dp"
        android:gravity="start"
        android:paddingEnd="10dp"
        android:layout_toEndOf="@+id/cl_check"/>

    <RelativeLayout
        android:layout_width="26dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_bg_check_status"
        android:layout_marginEnd="44dp">

        <TextView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:text="核查中"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:layout_centerHorizontal="true"
            android:ems="1"/>
    </RelativeLayout>

    <com.ruffian.library.widget.RTextView
        android:id="@+id/rtv_status"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:text="开办核查"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:background_normal="@color/color_b2c6d8"
        app:corner_radius="22dp"
        android:gravity="center"
        android:textSize="10sp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="11dp"
        app:text_color_normal="@color/white"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_arrow_right_gray"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="11dp"/>

</com.ruffian.library.widget.RRelativeLayout>